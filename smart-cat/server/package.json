{
  "name": "attestation-manager-backend",
  "private": "true",
  "version": "0.1.0",
  "engines": {
    "node": ">=16.13.0"
  },
  "scripts": {
    "dev": "nodemon src/index.ts",
    "start": "ncc run src/index.ts",
    "build": "ncc build src/index.ts -sm",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "test": "c8 ava",
    "jwt": "node scripts/jwt.js",
    "generate": "drizzle-kit generate:pg",
    "migrate": "ts-node --project tsconfig-migration.json scripts/migrate.ts",
    "drop": "drizzle-kit drop --config=drizzle.config.ts",
    "generate:sdk": "npm run generate:download-spec && rm -Rf ../frontend/src/client-sdk && openapi-generator-cli generate -i sdk/spec.yml -g typescript-axios -o ../frontend/src/lib/client-sdk",
    "generate:download-spec": "ts-node -T --project tsconfig-migration.json scripts/generateSdkSpec.ts",
    "generate:zod": "ts-to-zod src/schemas/zod/interfaces.ts src/schemas/zod/schemas.ts"
  },
  "dependencies": {
    "@ethereum-attestation-service/eas-sdk": "^1.1.0-beta.2",
    "@fastify/awilix": "^3.0.1",
    "@fastify/cors": "^8.2.0",
    "@fastify/jwt": "^6.3.3",
    "@fastify/request-context": "^5.0.0",
    "@fastify/swagger": "^8.5.1",
    "@fastify/swagger-ui": "^1.8.1",
    "@t3-oss/env-core": "^0.3.1",
    "@tokenscript/attestation": "0.5.0-beta.1",
    "@tokenscript/token-negotiator": "^3.0.2",
    "auth0-spa-js": "^1.6.5",
    "awilix": "^8.0.1",
    "axios": "^1.4.0",
    "dotenv": "^16.0.3",
    "drizzle-orm": "^0.27.2",
    "drizzle-zod": "0.4.4",
    "ethers": "^5.7.2",
    "fastify": "^4.10.2",
    "fastify-raw-body": "^4.2.0",
    "fastify-type-provider-zod": "^1.1.9",
    "node-schedule": "^2.1.0",
    "pg": "8.10.0",
    "pino": "^8.15.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.7.0",
    "@types/node": "^16.18.3",
    "@types/node-schedule": "^2.1.0",
    "@types/pg": "^8.10.2",
    "@vercel/ncc": "^0.38.0",
    "ava": "^4.3.3",
    "c8": "^7.12.0",
    "drizzle-kit": "^0.19.12",
    "gts": "^4.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "timeout": "180s",
    "failFast": true
  },
  "c8": {
    "exclude": [
      "test",
      "src/*.ts",
      "src/_core/type.ts",
      "src/_core/constant.ts"
    ],
    "reporter": [
      "text",
      "cobertura",
      "html",
      "json-summary"
    ]
  }
}
